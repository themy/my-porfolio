      polygon(points="100,0 100,50 0,50", fill="#fff")

  .clip-wrap.triangle-clip6
    svg(viewBox="0 0 100 50", preserveAspectRatio="none", width="100%", height="100%")
      polygon(points="100,0 100,40 50,25", fill="#f0f0f0")

