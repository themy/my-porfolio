mixin nav(items)
    ul&attributes(attributes)
        each item, key in items
            li
                +link(item.title, item.href, item.text)(class=item.class)
                    span=item.title
                - if (typeof(item.itemsMenu) !== 'undefined'){
                    +nav(item.itemsMenu)(class=item.subMenu)
                - }

mixin list(items)
    ul
        each item, key in items
            li
                i(class="icon icon-#{item.iconclass}")
                span(class=item.class)=item.title
                - if (typeof(item.itemsMenu) !== 'undefined'){
                    +list(item.itemsMenu)
                - }